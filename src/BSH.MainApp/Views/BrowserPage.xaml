<Page
    x:Class="BSH.MainApp.Views.BrowserPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:BSH.MainApp.Helpers"
    xmlns:converters="using:BSH.MainApp.Converters"
    xmlns:models="using:BSH.MainApp.Models"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:engine="using:Brightbits.BSH.Engine.Models" xmlns:interactivity="using:Microsoft.Xaml.Interactivity" xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Name="VersionTemplate" x:DataType="engine:VersionDetails">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <FontIcon VerticalAlignment="Center" FontSize="16" FontFamily="Segoe MDL2 Assets" Glyph="&#xE838;" Margin="0,0,10,0"/>
                <TextBlock VerticalAlignment="Center" Text="{Binding Path=CreationDate}" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Name="FileOrFolderTemplate" x:DataType="engine:FileTableRow">
            <StackPanel
                Orientation="Horizontal"
                Spacing="4"
                Background="Transparent">
                <i:Interaction.Behaviors>
                    <core:EventTriggerBehavior EventName="PointerEntered">
                        <core:ChangePropertyAction PropertyName="Opacity" Value="0.7" />
                    </core:EventTriggerBehavior>
                    <core:EventTriggerBehavior EventName="PointerExited">
                        <core:ChangePropertyAction PropertyName="Opacity" Value="1.0" />
                    </core:EventTriggerBehavior>
                </i:Interaction.Behaviors>
                <TextBlock Text="{Binding FileName}" VerticalAlignment="Center" FontSize="12" FontWeight="Medium" />
            </StackPanel>
        </DataTemplate>

        <converters:BooleanInverterConverter x:Key="BooleanInverter" />
        <converters:FileSizeConverter x:Key="FileSizeConverter" />
        <converters:VisibilityConverter x:Key="VisibilityConverter" />

        <Style
			x:Key="AddressToolbarButtonStyle"
			BasedOn="{StaticResource DefaultButtonStyle}"
			TargetType="Button">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Width" Value="36" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Foreground" Value="{StaticResource App.Theme.IconBaseColor}"/>
        </Style>

        <Style
            x:Key="SideBarTitleStyle"
            TargetType="TextBlock">
            <Setter Target="Margin" Value="8,0,12,0" />
            <Setter Target="FontSize" Value="12" />
            <Setter Target="FontWeight" Value="SemiBold" />
            <Setter Target="Foreground" Value="{ThemeResource TextFillColorTertiaryBrush}" />
        </Style>

        <Style
            x:Key="InfoPaneTitleStyle"
            TargetType="TextBlock">
            <Setter Target="Margin" Value="0,10,0,0" />
            <Setter Target="FontSize" Value="12" />
            <Setter Target="FontWeight" Value="SemiBold" />
            <Setter Target="Foreground" Value="{ThemeResource TextFillColorTertiaryBrush}" />
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" ColumnSpacing="4" Padding="10" Background="{StaticResource App.Theme.AddressBar.BackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="250" />
            </Grid.ColumnDefinitions>

            <!-- toolbar -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="4">
                <Button VerticalAlignment="Center" Command="{x:Bind ViewModel.UpFolderCommand}" Style="{StaticResource AddressToolbarButtonStyle}">
                    <FontIcon FontSize="16" Glyph="&#xe74a;" />
                </Button>
                <Button VerticalAlignment="Center" Command="{x:Bind ViewModel.RefreshCommand}" Style="{StaticResource AddressToolbarButtonStyle}">
                    <FontIcon FontSize="16" Glyph="&#xe72c;" />
                </Button>
            </StackPanel>

            <!-- breadcrumb bar -->
            <Grid
                Grid.Column="1"
                HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
                Background="{ThemeResource TextControlBackground}"
				BorderBrush="{ThemeResource ControlElevationBorderBrush}"
				BorderThickness="1"
                Padding="6,0,12,0"
				CornerRadius="{StaticResource ControlCornerRadius}">
                <BreadcrumbBar
                    Background="White"
                    ItemsSource="{Binding CurrentFolderPath}"
                    ItemClicked="BreadcrumbBar_ItemClicked"
                    VerticalAlignment="Center">
                    <BreadcrumbBar.ItemTemplate>
                        <DataTemplate x:DataType="models:FileOrFolderItem">
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </BreadcrumbBar.ItemTemplate>
                </BreadcrumbBar>
            </Grid>

            <!-- search box -->
            <TextBox x:Name="tbSearchBox" Grid.Column="2" PlaceholderText="Search" Text="{Binding SearchTerms}" />
        </Grid>


        <SplitView Grid.Row="2" IsPaneOpen="True" DisplayMode="Inline" OpenPaneLength="250">
            <SplitView.Pane>
                <Grid RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <!-- favorites -->
                    <TextBlock Grid.Row="0" Text="Favourites" Margin="12,12,0,0" Style="{StaticResource SideBarTitleStyle}" />
                    <ListView Margin="8,0,12,0" SelectedItem="{Binding CurrentFavorite, Mode=TwoWay}" Grid.Row="1" MaxHeight="300" ItemsSource="{Binding Favorites}">
                        <interactivity:Interaction.Behaviors>
                            <core:EventTriggerBehavior EventName="SelectionChanged">
                                <core:InvokeCommandAction Command="{x:Bind ViewModel.LoadFavoriteCommand}" />
                            </core:EventTriggerBehavior>
                        </interactivity:Interaction.Behaviors>
                    </ListView>

                    <!-- backup list -->
                    <TextBlock Grid.Row="2" Text="Backups" Margin="12,12,0,0" Style="{StaticResource SideBarTitleStyle}" />
                    <ListView 
                        Grid.Row="3" 
                        Margin="8,0,12,0"
                        ItemTemplate="{StaticResource VersionTemplate}" 
                        ItemsSource="{Binding Versions}" 
                        SelectedItem="{Binding CurrentVersion, Mode=TwoWay}">
                        <interactivity:Interaction.Behaviors>
                            <core:EventTriggerBehavior EventName="SelectionChanged">
                                <core:InvokeCommandAction Command="{x:Bind ViewModel.LoadVersionCommand}"/>
                            </core:EventTriggerBehavior>
                        </interactivity:Interaction.Behaviors>
                    </ListView>
                </Grid>
            </SplitView.Pane>

            <Grid BorderBrush="#f0f0f0" BorderThickness="0,1,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- command bar -->
                <Grid
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
		            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
		            BorderThickness="0,0,0,1">
                    <Grid.Resources>
                        <GridLength x:Key="CommandAreaGridLength">Auto</GridLength>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <CommandBar IsOpen="False" DefaultLabelPosition="Right" ClosedDisplayMode="Compact" HorizontalAlignment="Left">
                        <AppBarButton 
                            Command="{x:Bind ViewModel.RestoreFileCommand}" 
                            Icon="Copy" 
                            Label="Restore" />
                        <AppBarSeparator />
                        <AppBarButton 
                            Command="{x:Bind ViewModel.ShowFilePreviewCommand}" 
                            Icon="Preview"
                            Label="Quick preview"
                            LabelPosition="Collapsed"
                            Width="Auto"
                            MinWidth="40" />
                        <AppBarButton 
                            Command="{x:Bind ViewModel.ShowFilePropertiesCommand}" 
                            Label="Properties"
                            LabelPosition="Collapsed"
                            Width="Auto"
                            MinWidth="40"
                        >
                            <AppBarButton.Icon>
                                <FontIcon FontSize="16" Glyph="&#xe946;" />
                            </AppBarButton.Icon>
                        </AppBarButton>
                    </CommandBar>

                    <CommandBar
			            Grid.Column="1"
			            DefaultLabelPosition="Right">
                        <AppBarToggleButton
                            Label="Preview pane"
                            LabelPosition="Collapsed"
                            Icon="OpenPane"
                            Width="Auto"
                            MinWidth="40"
                            IsChecked="{x:Bind ViewModel.ToggleInfoPane, Mode=TwoWay}" />
                        <AppBarButton 
                            Icon="More" 
                            Label="Organize"
                            LabelPosition="Collapsed"
                            Width="Auto"
                            MinWidth="40">
                            <AppBarButton.Flyout>
                                <MenuFlyout Placement="BottomEdgeAlignedRight">
                                    <MenuFlyoutItem Command="{x:Bind ViewModel.RestoreAllCommand}" Text="Restore all"/>
                                    <MenuFlyoutItem Command="{x:Bind ViewModel.AddFolderToFavoritesCommand}" Text="Add to folder favorites"/>
                                    <MenuFlyoutSeparator />
                                    <MenuFlyoutItem Command="{x:Bind ViewModel.EditBackupCommand}" Icon="Edit" Text="Edit backup" />
                                    <MenuFlyoutItem Command="{x:Bind ViewModel.DeleteBackupCommand}" Icon="Delete" Text="Delete backup"/>
                                    <MenuFlyoutItem Command="{x:Bind ViewModel.LockBackupCommand}" Text="Lock backup" />
                                    <MenuFlyoutSeparator />
                                    <MenuFlyoutItem Command="{x:Bind ViewModel.DeleteBackupsCommand}" Text="Delete multiple backups"/>
                                </MenuFlyout>
                            </AppBarButton.Flyout>
                        </AppBarButton>
                    </CommandBar>
                </Grid>

                <!-- file and folder list -->
                <ScrollViewer Grid.Row="1" VerticalScrollMode="Auto">
                    <ListView 
                        ItemsSource="{Binding Items}" 
                        SelectedItem="{x:Bind ViewModel.CurrentItem, Mode=TwoWay}">
                        <interactivity:Interaction.Behaviors>
                            <core:EventTriggerBehavior EventName="DoubleTapped">
                                <core:InvokeCommandAction Command="{x:Bind ViewModel.LoadFolderCommand}" />
                            </core:EventTriggerBehavior>
                        </interactivity:Interaction.Behaviors>
                        <ListView.HeaderTemplate>
                            <DataTemplate>
                                <Grid Padding="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Name" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                    <TextBlock Grid.Column="1" Text="Last modified" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                    <TextBlock Grid.Column="2" Text="Size" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.HeaderTemplate>
                        <ListView.ItemTemplate>
                            <DataTemplate x:Name="TableDataTemplate" x:DataType="models:FileOrFolderItem">
                                <Grid Height="30">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <FontIcon Visibility="{Binding Path=IsFile, Converter={StaticResource BooleanInverter}}" VerticalAlignment="Center" FontSize="16" FontFamily="Segoe MDL2 Assets" Glyph="&#xE8B7;" Margin="0,0,10,0" />
                                        <Image Visibility="{Binding Path=IsFile}" Source="{Binding Icon}" Height="16" Width="16" Margin="0,0,10,0" />
                                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="{Binding Name}" />
                                    </StackPanel>
                                    <TextBlock Visibility="{Binding IsFile}" Grid.Column="1" VerticalAlignment="Center" Text="{Binding FileDateModified}"/>
                                    <TextBlock Visibility="{Binding IsFile}" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Text="{Binding FileSize, Converter={StaticResource FileSizeConverter}}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>

                <!-- info pane -->
                <Grid 
                    Grid.Row="1"
                    Grid.Column="1"
                    ColumnSpacing="15" 
                    RowSpacing="10" 
                    Padding="20" 
                    BorderBrush="#f0f0f0" 
                    BorderThickness="1,0,0,0" 
                    Visibility="{Binding ToggleInfoPane, Converter={StaticResource VisibilityConverter}}"
                    Width="300">
                    <StackPanel
                        Orientation="Vertical"
                        Spacing="8">
                        <TextBlock HorizontalAlignment="Center" FontWeight="Bold" Text="{Binding CurrentItem.Name}" />

                        <TextBlock Style="{StaticResource InfoPaneTitleStyle}">Path</TextBlock>
                        <TextBlock Text="{Binding CurrentItem.FullPath}" TextWrapping="Wrap" />

                        <TextBlock Style="{StaticResource InfoPaneTitleStyle}" Visibility="{Binding CurrentItem.IsFile, FallbackValue='Collapsed'}">Date created</TextBlock>
                        <TextBlock Visibility="{Binding CurrentItem.IsFile, FallbackValue='Collapsed'}" Text="{Binding CurrentItem.FileDateCreated}" />

                        <TextBlock Style="{StaticResource InfoPaneTitleStyle}" Visibility="{Binding CurrentItem.IsFile, FallbackValue='Collapsed'}">Last modified</TextBlock>
                        <TextBlock Visibility="{Binding CurrentItem.IsFile, FallbackValue='Collapsed'}" Text="{Binding CurrentItem.FileDateModified}" />
                    </StackPanel>
                </Grid>
            </Grid>
        </SplitView>
    </Grid>
</Page>
