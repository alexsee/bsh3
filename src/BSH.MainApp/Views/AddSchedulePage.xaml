<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BSH.MainApp.Views.AddSchedulePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:BSH.MainApp.ViewModels.Windows"
    Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=viewmodels:AddScheduleViewModel}">

    <Page.Resources>
        <Style x:Key="SectionCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="20" />
        </Style>

        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Page.Resources>

    <ScrollViewer Padding="28,24,28,16">
        <Grid MaxWidth="820" RowSpacing="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Spacing="6">
                <TextBlock FontSize="30" FontWeight="SemiBold" Text="Add Backup Schedule" />
                <TextBlock
                    FontSize="14"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="Pick a frequency and configure when backups should run." />
            </StackPanel>

            <Border Grid.Row="1" Style="{StaticResource SectionCardStyle}">
                <Grid ColumnSpacing="14">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        Style="{StaticResource FieldLabelStyle}"
                        AutomationProperties.Name="Interval Label"
                        Text="Interval" />
                    <ComboBox
                        Grid.Column="1"
                        MinWidth="280"
                        SelectedIndex="{x:Bind ViewModel.SelectedInterval, Mode=TwoWay}"
                        AutomationProperties.Name="Interval Selection"
                        AutomationProperties.HelpText="Select the backup schedule interval">
                        <ComboBoxItem Content="Once" />
                        <ComboBoxItem Content="Hourly" />
                        <ComboBoxItem Content="Daily" />
                        <ComboBoxItem Content="Weekly" />
                        <ComboBoxItem Content="Monthly" />
                    </ComboBox>
                </Grid>
            </Border>

            <Border Grid.Row="2" Style="{StaticResource SectionCardStyle}">
                <StackPanel Spacing="12">
                    <TextBlock FontSize="16" FontWeight="SemiBold" Text="Schedule Details" />

                    <Grid Visibility="{x:Bind ViewModel.ShowOnceOptions, Mode=OneWay}" ColumnSpacing="14" RowSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Style="{StaticResource FieldLabelStyle}" Text="Date" />
                        <CalendarDatePicker
                            Grid.Column="1"
                            Date="{x:Bind ViewModel.StartDate, Mode=TwoWay}"
                            AutomationProperties.Name="Date Input"
                            AutomationProperties.HelpText="Select the date to run the backup" />
                        <TextBlock Grid.Column="2" Style="{StaticResource FieldLabelStyle}" Text="Time" />
                        <TimePicker
                            Grid.Column="3"
                            Time="{x:Bind ViewModel.StartTime, Mode=TwoWay}"
                            AutomationProperties.Name="Time Input"
                            AutomationProperties.HelpText="Select the time to run the backup" />
                    </Grid>

                    <Grid Visibility="{x:Bind ViewModel.ShowHourlyOptions, Mode=OneWay}" ColumnSpacing="14">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Style="{StaticResource FieldLabelStyle}" Text="Minute Marker" />
                        <TimePicker
                            Grid.Column="1"
                            Time="{x:Bind ViewModel.StartTime, Mode=TwoWay}"
                            AutomationProperties.HelpText="Select the minute when hourly backups should run" />
                    </Grid>

                    <Grid Visibility="{x:Bind ViewModel.ShowDailyOptions, Mode=OneWay}" ColumnSpacing="14">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Style="{StaticResource FieldLabelStyle}" Text="Time" />
                        <TimePicker
                            Grid.Column="1"
                            Time="{x:Bind ViewModel.StartTime, Mode=TwoWay}"
                            AutomationProperties.HelpText="Select the time to run the backup daily" />
                    </Grid>

                    <Grid Visibility="{x:Bind ViewModel.ShowWeeklyOptions, Mode=OneWay}" ColumnSpacing="14" RowSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource FieldLabelStyle}" Text="Time" />
                        <TimePicker
                            Grid.Row="0"
                            Grid.Column="1"
                            Time="{x:Bind ViewModel.StartTime, Mode=TwoWay}"
                            AutomationProperties.HelpText="Select the time to run the backup weekly" />

                        <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource FieldLabelStyle}" Text="Days" />
                        <GridView Grid.Row="1" Grid.Column="1" CharacterSpacing="10">
                            <CheckBox Content="Mon" IsChecked="{x:Bind ViewModel.Monday, Mode=TwoWay}" />
                            <CheckBox Content="Tue" IsChecked="{x:Bind ViewModel.Tuesday, Mode=TwoWay}" />
                            <CheckBox Content="Wed" IsChecked="{x:Bind ViewModel.Wednesday, Mode=TwoWay}" />
                            <CheckBox Content="Thu" IsChecked="{x:Bind ViewModel.Thursday, Mode=TwoWay}" />
                            <CheckBox Content="Fri" IsChecked="{x:Bind ViewModel.Friday, Mode=TwoWay}" />
                            <CheckBox Content="Sat" IsChecked="{x:Bind ViewModel.Saturday, Mode=TwoWay}" />
                            <CheckBox Content="Sun" IsChecked="{x:Bind ViewModel.Sunday, Mode=TwoWay}" />
                        </GridView>
                    </Grid>

                    <Grid Visibility="{x:Bind ViewModel.ShowMonthlyOptions, Mode=OneWay}" ColumnSpacing="14" RowSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource FieldLabelStyle}" Text="Time" />
                        <TimePicker
                            Grid.Row="0"
                            Grid.Column="1"
                            Time="{x:Bind ViewModel.StartTime, Mode=TwoWay}"
                            AutomationProperties.HelpText="Select the time to run the backup monthly" />
                        <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource FieldLabelStyle}" Text="Day Of Month" />
                        <NumberBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Width="200"
                            Value="{x:Bind ViewModel.DayOfMonth, Mode=TwoWay}"
                            Minimum="1"
                            Maximum="31"
                            SpinButtonPlacementMode="Inline"
                            AutomationProperties.Name="Day of Month Input"
                            AutomationProperties.HelpText="Enter the day of the month to run the backup" />
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
