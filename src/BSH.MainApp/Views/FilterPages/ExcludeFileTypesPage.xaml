<Page
    x:Class="BSH.MainApp.Views.FilterPages.ExcludeFileTypesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Grid RowSpacing="12" Padding="8">
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<ListView Grid.Row="0"
                    ItemsSource="{Binding ExcludeFileTypes}"
                    SelectedItem="{Binding SelectedFileType, Mode=TwoWay}">
			<ListView.Header>
				<TextBlock FontWeight="Bold">Extension</TextBlock>
			</ListView.Header>
		</ListView>
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>

			<TextBox x:Name="FileTypeInput"
					 PlaceholderText="Enter extension (without dot)"
					 Margin="0,0,10,0"
					 Text="{Binding FileTypeInputText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

			<StackPanel Orientation="Horizontal" Grid.Column="1" Spacing="10">
				<Button Content="Add" Command="{Binding AddFileTypeCommand}" CommandParameter="{Binding FileTypeInputText}" />
				<Button Content="Remove" Command="{Binding RemoveFileTypeCommand}" />
			</StackPanel>
		</Grid>
	</Grid>
</Page>
